{
  "$schema": "http://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type"
      ],
      "allow_headers": [
        "Accept-Language",
        "Content-Type"
      ],
      "max_age": "12h",
      "allow_credentials": false,
      "debug": true
    }
  },
  "output_encoding": "json",
  "name": "CTScan API",
  "host": ["http://localho.st"],
  "port": 8081,
  "endpoints":
    [
      {
        "endpoint": "/login",
        "method": "POST",
        "backend": [
          {
            "encoding": "json",
            "url_pattern": "/login",
            "host": ["http://user_service:5000"]
          }
        ]
      },
      {
        "endpoint": "/logout",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/logout",
            "host": ["http://user_service:5000"]
          }
        ]
      },
      {
        "endpoint": "/account",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/account",
            "host": ["http://user_service:5000"]
          }
        ]
      },
      {
        "endpoint": "/account/{userId}",
        "method": "GET",
        "backend": [
          {
            "url_pattern": "/account/{userId}",
            "host": ["http://user_service:5000"]
          }
        ]
      },
      {
        "endpoint": "/upload",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/upload",
            "host": ["http://analysis_service:5000"]
          }
        ]
      },
      {
        "endpoint": "/analyse",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/analyse",
            "host": ["http://analysis_service:5000"]
          }
        ]
      },
      {
        "endpoint": "/report/{reportId}",
        "method": "GET",
        "backend": [
          {
            "url_pattern": "/report/{reportId}",
            "host": ["http://analysis_service:5000"]
          }
        ]
      },
      {
        "endpoint": "/report",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/report",
            "host": ["http://analysis_service:5000"]
          }
        ]
      }
    ]
}